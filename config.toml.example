# Taskdog Configuration File Example
# Copy this file to ~/.config/taskdog/config.toml and customize as needed
#
# IMPORTANT: Before using taskdog CLI/TUI, you MUST:
#   1. Set [api] enabled = true in this config (see below)
#   2. Start the API server: taskdog-server
#   3. Then you can run CLI commands: taskdog <command>
#
# The CLI and TUI require a running API server to function.
# Most sections are optional except [api] which is required.

# ============================================================
# API Server Settings (REQUIRED)
# ============================================================
[api]
# Enable API mode for client-server communication
# NOTE: CLI and TUI will NOT work if this is false
# You must start taskdog-server before using taskdog commands
enabled = true

# API server host - must match where taskdog-server is running
# Use "127.0.0.1" for local server, or server IP for remote access
host = "127.0.0.1"

# API server port - must match the port taskdog-server is using
port = 8000

# Alternative: Set via environment variable (takes precedence over config)
# export TASKDOG_API_URL=http://127.0.0.1:8000

# ============================================================
# Optional Settings (all sections below are optional)
# ============================================================

# Task-related Settings
[task]
# Default priority for new tasks (1-10, default: 5)
default_priority = 5

# Optimization Settings
[optimization]
# Maximum work hours per day for schedule optimization (default: 6.0)
max_hours_per_day = 6.0

# Default optimization algorithm (default: "greedy")
# Available: greedy, balanced, backward, priority_first, earliest_deadline,
#            round_robin, dependency_aware, genetic, monte_carlo
default_algorithm = "greedy"

# Display Settings
[display]
# Datetime format for display (default: "%Y-%m-%d %H:%M:%S")
# Uses Python strftime format
datetime_format = "%Y-%m-%d %H:%M:%S"

# Time Settings
[time]
# Default hour for task start times / business day start (0-23, default: 9)
default_start_hour = 9

# Default hour for task end times and deadlines / business day end (0-23, default: 18)
default_end_hour = 18

# Region Settings
[region]
# ISO 3166-1 alpha-2 country code for holiday checking (default: none)
# Examples: "JP" (Japan), "US" (United States), "GB" (United Kingdom), "DE" (Germany)
# Leave commented out to disable holiday checking
# country = "JP"
