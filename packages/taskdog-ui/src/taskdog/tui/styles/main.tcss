/* Main Screen Styles */

MainScreen {
    background: transparent;
}

#title {
    padding: 1;
    background: transparent;
    text-align: center;
}

#gantt-title, #table-title {
    padding: 1 0;
    text-align: left;
    background: transparent;
}

/* Gantt chart - main display area */
#gantt-widget {
    width: 100%;
    height: 40;
    background: transparent;
    border: round $primary;
    margin-bottom: 1;
}

/* Gantt data table - inside gantt widget */
#gantt-table {
    width: 100%;
    height: auto;
    border: round $primary;
}

/* Task table - inside filterable container */
#task-table {
    width: 100%;
    height: 1fr;
    background: transparent;
    overflow-y: auto;
}
